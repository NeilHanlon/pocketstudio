<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_project_viewer"
    android:text="Project"
    android:label="@+id/activity_project_editor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.wit.mobileapp.pocketstudio.ProjectEditor">

    <LinearLayout
        android:id="@+id/bottomBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/undoRegion"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryDark">

            <ImageButton
                android:id="@+id/undoButton"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/pvundobutton"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mediaControlRegion"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryDark">

            <RelativeLayout
                android:id="@+id/mediaControl"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingLeft="27dp"
                android:paddingRight="27dp"
                android:background="@drawable/mediacontrol">

                <ImageButton
                    android:id="@+id/backToZeroButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/pvbackzerobutton"/>

                <ImageButton
                    android:id="@+id/playButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/pvplaybutton"/>

                <ImageButton
                    android:id="@+id/recordButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/pvrecordbutton"/>

            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/timerRegion"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/timer"
                android:text="00:00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:typeface="normal"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </RelativeLayout>

</RelativeLayout>


