<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_project_viewer"
    android:text="Project"
    android:label="@+id/activity_project_editor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.wit.mobileapp.pocketstudio.ProjectEditor">

    <LinearLayout
        android:id="@+id/fullContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/trackSidebar"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/content_white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/track1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorAccent"
                android:onClick="clickableTrack1"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/track1Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="Track 1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/trackSettings1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_track_settings" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/track2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:onClick="clickableTrack2"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/track2Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/track_2"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/trackSettings2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_track_settings" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/track3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/content_white"
                android:onClick="clickableTrack3"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/track3Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/track_3"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/trackSettings3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_track_settings" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/track4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:onClick="clickableTrack4"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/track4Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/track_4"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/trackSettings4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_track_settings" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/contentContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <edu.wit.mobileapp.pocketstudio.SoundView
                    android:id="@+id/soundView1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/bg_white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <edu.wit.mobileapp.pocketstudio.SoundView
                    android:layout_width="match_parent"
                    android:id="@+id/soundView2"
                    android:background="@color/bg_white"
                    android:layout_height="100dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <edu.wit.mobileapp.pocketstudio.SoundView
                    android:layout_width="match_parent"
                    android:id="@+id/soundView3"
                    android:paddingBottom="15dp"
                    android:paddingTop="5dp"
                    android:background="@color/bg_white"
                    android:layout_height="100dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <edu.wit.mobileapp.pocketstudio.SoundView
                    android:layout_width="match_parent"
                    android:id="@+id/soundView4"
                    android:paddingBottom="15dp"
                    android:paddingTop="5dp"
                    android:background="@color/bg_white"
                    android:layout_height="100dp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/undoRegion"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryDark">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mediaControlRegion"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:id="@+id/mediaControl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mediacontrol"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:id="@+id/zeroTouchArea"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="34">

                    <ImageButton
                        android:id="@+id/buttonBackToZero"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/pvbackzerobutton" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/playTouchArea"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="33">

                    <ImageButton
                        android:id="@+id/buttonPlayPause"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/pvplaybutton" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/recordTouchArea"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="33">

                    <ImageButton
                        android:id="@+id/buttonRecord"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/pvrecordbutton" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/timerRegion"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/timer"
                android:text="00:00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:typeface="normal"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"/>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>


